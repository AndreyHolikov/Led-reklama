@model IEnumerable<Led.Models.LedDisplay>

@{
    ViewBag.Title = "Экраны";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Добавить экран", "Create", new {  ownerId = ViewBag.OwnerId })
</p>
<table class="table">
    <tr>
        <th>

        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Owner)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Подробнее", "Details", new { id = item.Id })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address.City.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address.FullAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Owner.Name)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
